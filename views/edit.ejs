<% include partials/header %>
        <div class="ui main text container segment">
            <h1>Edit <%= video.name %></h1>
    <div class="row">
        <form action="/video/<%= video._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="video[name]" value="<%= video.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="video[url]" value="<%= video.url %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="video[description]" value="<%= video.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-large" class="btn btn-lg btn-default" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
</div>

<% include partials/footer %>